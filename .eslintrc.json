{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "semi": [2, "always"],
    "strict": "off",
    "no-unused-vars": "warn",
    "class-methods-use-this": "off",
    "no-param-reassign": ["error", { "props": false }]
  }
}
